@using TaskManager.Srv.Components.Forms

<MudMessageBox>
    <MessageContent>
    <MudText Typo="Typo.h6">Új feladat</MudText>
    <CreateTaskForm OnValidate="@((isValid) => OnValidate(isValid))"/>
    </MessageContent>
    <CancelButton>
        <MudButton OnClick="Cancel">Mégse</MudButton>
    </CancelButton>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="@DisableSubmit" OnClick="CreateTask">Létrehozás</MudButton>
    </YesButton>
</MudMessageBox>
