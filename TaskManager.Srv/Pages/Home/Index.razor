@page "/"

<MudStack>
    <MudStack Reverse="true" Row="true">
        
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="AddNewProject">Új Projekt</MudButton>
        <MudTextField  Variant="Variant.Outlined" Placeholder="Keresés..." Immediate="true" @bind-Value="_searchTerm" />
    </MudStack>
    <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true">
        <MudTabPanel Text="Saját projektjeim">
            <ProjectList @ref="projectList" MineOnly="true" SearchTerm="@_searchTerm" />
        </MudTabPanel>
        <MudTabPanel Text="Összes projekt">
            <ProjectList @ref="projectList" MineOnly="false" SearchTerm="@_searchTerm" />
        </MudTabPanel>
    </MudTabs>
</MudStack>
